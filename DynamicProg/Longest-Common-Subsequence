#include <stdio.h>
#include <string.h>

#define M_LENGTH 100

int lcs_length(char *A, char *B, int m, int n, int L[][M_LENGTH]) {
    // Initializing the first row and first column of the L table to 0
    for (int i = 0; i <= m; i++) {
        L[i][0] = 0;
    }
    for (int j = 0; j <= n; j++) {
        L[0][j] = 0;
    }
    
    int i = 1;
    while (i <= m) {
    int j = 1;
    while (j <= n) {
        if (A[i-1] == B[j-1]) {
            L[i][j] = L[i-1][j-1] + 1;
        } else {
            L[i][j] = (L[i][j-1] > L[i-1][j]) ? L[i][j-1] : L[i-1][j];
        }
        j++;
    }
    i++;
}


    // Return the length of the Longest Common Subsequence
    return L[m][n];
}

void print_lcs(char *A, char *B, int m, int n, int L[][M_LENGTH]) {
    char lcs[M_LENGTH];
    int len = 0;
    int i = m;
    int j = n;

    while (i > 0 && j > 0) {
        if (A[i-1] == B[j-1]) {
            lcs[len] = A[i-1];
            len++;
            i--;
            j--;
        } else if (L[i][j-1] > L[i-1][j]) {
            j--;
        } else {
            i--;
        }
    }

    // Print the LCS in reverse order
    printf("LCS: ");
    for (int k = len-1; k >= 0; k--) {
        printf("%c", lcs[k]);
    }
    printf("\n");
}

int main() {
    // Example 1
    char A3[] = "ABCD";
    char B3[] = "EFGH";
    int m3 = strlen(A3);
    int n3 = strlen(B3);
    int L3[M_LENGTH][M_LENGTH];
    int len3 = lcs_length(A3, B3, m3, n3, L3);
    printf("Input String 1:\n");
    printf("X: %s\n", A3);
    printf("Y: %s\n", B3);
    printf("Length of Longest Common Subsequence: %d\n", len3);
    print_lcs(A3, B3, m3, n3, L3);
    printf("\n");
    
    // Example 2
    char A2[] = "ABCDGH";
    char B2[] = "AEDFHR";
    int m2 = strlen(A2);
    int n2 = strlen(B2);
    int L2[M_LENGTH][M_LENGTH];
    int len2 = lcs_length(A2, B2, m2, n2, L2);
    printf("Input String 2:\n");
    printf("X: %s\n", A2);
    printf("Y: %s\n", B2);
    printf("Length of Longest Common Subsequence: %d\n", len2);
    print_lcs(A2, B2, m2, n2, L2);
    printf("\n");

    // Example 3
    char A1[] = "AGGTAB";
    char B1[] = "GXTXAYB";
    int m1 = strlen(A1);
    int n1 = strlen(B1);
    int L1[M_LENGTH][M_LENGTH];
    int len1 = lcs_length(A1, B1, m1, n1, L1);
    printf("Input String 3:\n");
    printf("X: %s\n", A1);
    printf("Y: %s\n", B1);
    printf("Length of Longest Common Subsequence: %d\n", len1);
    print_lcs(A1, B1, m1, n1, L1);
    printf("\n");

    return 0;
}
